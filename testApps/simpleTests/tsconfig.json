{
   "compilerOptions": {
      "allowUnreachableCode": false,
      "alwaysStrict": true,
      "baseUrl": "src",
      "lib": ["ES2017", "DOM", "DOM.Iterable"],
      "module": "node16",
      "noFallthroughCasesInSwitch": true,
      "noImplicitAny": true,
      "noImplicitOverride": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "outDir": "tempBuild",
      "paths": {
         "dsp-collection/*": ["../../../dist/*"]
      },
      "removeComments": true,
      "rewriteRelativeImportExtensions": true,
      "sourceMap": true,
      "strictFunctionTypes": true,
      "strictNullChecks": true,
      "target": "ES2017",
      "typeRoots" : ["./node_modules/@types"],  // to prevent usage of type definitions in node_modules of parent directories
   },
   "include": [
      "src/**/*"
   ]
}
